{
    "CompilerOptions": {
        "target":"es6",
        "module": "NodeNext",
        "moduleResolution": "node",
        "baseUrl": "src",
        "outDir": "dist",
        "sourceMap": false,
        "noImplicitAny": false,
        "allowJs":true,
        "ts-node": { "esm": true } ,
        "types": ["node"],
        "esModuleInterop": true
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules"]
}